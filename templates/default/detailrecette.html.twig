{% extends 'base.html.twig' %}

{% block title %}{{ recette.nom }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1 class="display-4">{{ recette.nom }}</h1>
                {% if recette.image %}
                    <img src="{{ asset('uploads/recettes/' ~ recette.image) }}" alt="{{ recette.nom }}" class="img-fluid mb-3 rounded">
                {% endif %}
                <p class="lead">{{ recette.description }}</p>
                <p><strong>Temps de préparation:</strong> {{ recette.tempsPreparation }} minutes</p>
                <p><strong>Temps de cuisson:</strong> {{ recette.tempsCuisson }} minutes</p>
                <h4>Ingrédients:</h4>
                <ul class="list-group mb-3">
                    {% for produit in recette.produits %}
                        <li class="list-group-item d-flex align-items-center">
                            {% if produit.image %}
                                <img src="{{ asset('images/' ~ produit.image) }}" alt="{{ produit.nom }}" class="img-thumbnail me-3" style="width: 100px; height: 100px; object-fit: cover;">
                            {% endif %}
                            <span>{{ produit.nom }}</span>
                        </li>
                    {% endfor %}
                </ul>
                <h4>Instructions:</h4>
                <p>{{ recette.instructions }}</p>
            </div>
        </div>
    </div>
{% endblock %}
